<h2>Show Details</h2>
<div class="row">
  <div class="col-md-4">
    <%= image_tag @item.picture, class: 'img-thumbnail box', width: 120 if @item.picture.attached? %>
    </div>
    <%= "#{@item.sub_category.name} #{@item.description} #{@item.brand} #{@item.model} #{@item.age} #{@item.condition} "%>
  <div class="col-md-4">
    <%= "#{number_to_currency @item.price} #{@item.user.email}"%>
    </div>
  <div class="col-md-4">
    <% if @item.user == current_user %>
      <%= link_to 'Remove Listing', destroy_item_path(@item.id), method: "delete" %>
    <% elsif @item.rent == true %>
      <%= link_to "Rent Item", new_order_path(item_id: @item.id), class: "btn btn-info"%>
    <% else %>
      <%= link_to "Buy Item", new_order_path(item_id: @item.id), class: "btn btn-info"%>
    <% end %>
  </div>
</div>
