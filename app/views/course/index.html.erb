<div class="shop-align">
    <br />
    <h2>Course Catelog</h2>
    <%# <p><%= link_to "View My Courses", listings_path %> 
    <br/>
    <br/>
    <h4>Search</h4>
  <br />
  <br />
  <div class="course-list">
    <% @course.each do |course| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <%= image_tag course.picture, class:"card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= "#{course.name}" %></h5>
            <p class="card-text">ADDRESS</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= "#{course.holes}" %></li>
            <li class="list-group-item"><%= "Length: #{course.length}" %></li>
            <li class="list-group-item"><%= "Difficulty:#{course.difficulty}" %></li>
          </ul>
          <div class="card-body">
            <%= link_to "Show Details", course_path(course.id) %>
          </div>
        </div>
      </div>
      <br />
      <br />
    <%end%>
  </div>
</div>




